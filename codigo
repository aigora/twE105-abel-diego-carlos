			printf("Usuario:\t");
			scanf("%s", id);
		case 2:
		printf("\n > Identificate:\n\tSoy cliente(1)\t Soy empleado(2)\n");
		scanf("%i", &b);
		
		if(b == 1)
		{
			printf("Introduce tu nombre de usuario");
		}
		break;
		default:
	}
	
